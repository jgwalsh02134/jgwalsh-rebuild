---

<section class="section-core" aria-labelledby="core-title">
  <div class="container">
    <div class="section-header fade-in">
      <span class="section-eyebrow">Capabilities</span>
      <h2 id="core-title" class="section-title">Core Competencies</h2>
      <p class="section-lead">An interdisciplinary foundation honed through direct field experience in investigative, institutional, and clinical settings.</p>
    </div>

    <div class="competency-grid">
      {competencies.map((competency, idx) => (
        <div class={`card fade-in stagger-${idx + 1}`}>
          <span class="card-number">{String(idx + 1).padStart(2, "0")}</span>
          <h3>{competency.title}</h3>
          <p>{competency.description}</p>
          <ul>
            {competency.items.map((item) => (
              <li>
                <strong>{item.title}</strong>
                {item.text}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
