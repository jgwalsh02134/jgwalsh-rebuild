  {
    title: "Clinical Insight & Behavioral Analysis",
    description: "Extensive professional experience in high-stakes roles assessing complex behavioral patterns and human risk factors.",
    cardClass: "card-1",
    items: [
      {
        title: "Pattern Recognition",
        text: "Identified behavioral triggers and psychosocial factors to inform strategic interventions.",
      },
      {
        title: "Crisis & Risk Management",
        text: "Executed crisis response, de-escalation protocols, and strategic safety planning.",
      },
      {
        title: "Structured Interviewing",
        text: "Conducted individual interviews and facilitated group analysis to identify underlying motivations.",
      },
    ],
  },
  {
    title: "Quantitative Analysis & Strategic Insight",
    description: "Applied data methods for research in clinical and academic contexts.",
    cardClass: "card-2",
    items: [
      {
        title: "Statistical Programming",
        text: "Python & SPSS for modeling and hypothesis testing.",
      },
      {
        title: "Data Interpretation",
        text: "Deriving evidence-based conclusions from complex datasets.",
