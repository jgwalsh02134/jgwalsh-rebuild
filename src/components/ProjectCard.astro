---
export interface Props {
  title: string;
  description: string;
  tags: string[];
  category: string;
  image?: string;
  link: string;
}

const { title, description, tags, category, image, link } = Astro.props;
---

<article class="project-card" data-category={category}>
  {image ? (
    <a class="project-card__media" href={link}>
      <img class="project-card__image" src={image} alt="" loading="lazy" />
    </a>
  ) : null}

  <div class="project-card__body">
    <header class="project-card__header">
      <h3 class="project-card__title">
        <a class="project-card__titleLink" href={link}>{title}</a>
      </h3>
      <p class="project-card__desc">{description}</p>
    </header>

    <ul class="project-card__tags" aria-label="Project tags">
      {tags.map((tag) => (
        <li><span class="project-tag">{tag}</span></li>
      ))}
    </ul>
  </div>
</article>

<style>
  .project-card {
    background: var(--pure-white);
    border: 1px solid var(--ink-10);
    border-radius: 14px;
    padding: var(--space-8);
    display: grid;
    gap: var(--space-6);
    transition:
      transform var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out),
      border-color var(--duration-normal) var(--ease-out);
    will-change: transform;
  }

  :global(.dark) .project-card {
    background: rgba(255, 255, 255, 0.04);
    border-color: var(--ink-20);
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: rgba(0, 51, 160, 0.25);
  }

  .project-card:focus-within {
    border-color: rgba(0, 51, 160, 0.35);
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.16);
  }

  .project-card__media {
    display: block;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--ink-10);
    background: var(--paper);
  }

  :global(.dark) .project-card__media {
    border-color: var(--ink-20);
    background: rgba(255, 255, 255, 0.03);
  }

  .project-card__image {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .project-card__body {
    display: grid;
    gap: var(--space-6);
  }

  .project-card__title {
    font-size: var(--text-xl);
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.2;
    margin-bottom: var(--space-2);
  }

  .project-card__titleLink {
    color: var(--ink);
  }

  :global(.dark) .project-card__titleLink {
    color: var(--ink);
  }

  .project-card__titleLink:hover {
    color: var(--cern-blue);
  }

  .project-card__desc {
    color: var(--ink-60);
    font-size: var(--text-sm);
    line-height: 1.75;
    max-width: 70ch;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .project-tag {
    display: inline-flex;
    align-items: center;
    padding: var(--space-2) var(--space-3);
    border-radius: 9999px;
    background: var(--ink-10);
    border: 1px solid transparent;
    color: var(--ink-80);
    font-size: var(--text-xs);
    line-height: 1.2;
    transition: border-color var(--duration-fast) var(--ease-out),
      background var(--duration-fast) var(--ease-out);
  }

  :global(.dark) .project-tag {
    background: rgba(255, 255, 255, 0.06);
    color: var(--ink-80);
  }

  .project-card:hover .project-tag {
    border-color: rgba(0, 51, 160, 0.25);
  }

  /* List mode: handled by toggling a class on the grid container */
  :global(.projects-grid.view-list) .project-card {
    grid-template-columns: 168px 1fr;
    align-items: start;
  }

  :global(.projects-grid.view-list) .project-card__media {
    margin-top: 2px;
  }

  :global(.projects-grid.view-list) .project-card__image {
    aspect-ratio: 4 / 3;
  }

  @media (max-width: 520px) {
    :global(.projects-grid.view-list) .project-card {
      grid-template-columns: 1fr;
    }
  }
</style>

