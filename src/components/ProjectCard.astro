---
export interface Props {
  title: string;
  description: string;
  tags: string[];
  category: string;
  image?: string;
  link: string;
}

const { title, description, tags, category, image, link } = Astro.props;
---

<article class="project-card" data-category={category}>
  <a class="project-card__link" href={link}>
    <div class="project-card__media" aria-hidden="true">
      {image ? (
        <img class="project-card__img" src={image} alt="" loading="lazy" />
      ) : (
        <div class="project-card__placeholder" aria-hidden="true"></div>
      )}
    </div>

    <div class="project-card__body">
      <h3 class="project-card__title">{title}</h3>
      <p class="project-card__description">{description}</p>

      <ul class="project-card__tags" aria-label="Tags">
        {tags.map((t) => (
          <li><span class="project-chip">{t}</span></li>
        ))}
      </ul>
    </div>
  </a>
</article>

<style>
  .project-card {
    border-radius: 12px;
    border: 1px solid var(--ink-10);
    background: rgba(255, 255, 255, 0.6);
    overflow: hidden;
    transition:
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      background var(--duration-fast) var(--ease-out);
  }

  :global(.dark) .project-card {
    background: rgba(10, 10, 10, 0.55);
    border-color: var(--ink-20);
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: rgba(0, 51, 160, 0.28);
    background: rgba(0, 51, 160, 0.04);
  }

  .project-card__link {
    display: grid;
    grid-template-rows: auto 1fr;
    height: 100%;
  }

  .project-card__media {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: var(--ink-10);
    position: relative;
  }

  .project-card__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-card__placeholder {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(135deg, rgba(0, 51, 160, 0.10), transparent 55%),
      linear-gradient(45deg, rgba(255, 107, 0, 0.10), transparent 55%);
  }

  .project-card__body {
    padding: var(--space-6);
    display: grid;
    gap: var(--space-3);
    align-content: start;
  }

  .project-card__title {
    font-size: var(--text-lg);
    font-weight: 600;
    letter-spacing: -0.01em;
    color: var(--ink);
  }

  :global(.dark) .project-card__title {
    color: var(--ink);
  }

  .project-card__description {
    font-size: var(--text-sm);
    line-height: 1.75;
    color: var(--ink-60);
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .project-chip {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: 9999px;
    background: var(--ink-10);
    border: 1px solid transparent;
    font-size: var(--text-xs);
    color: var(--ink-80);
    transition:
      background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  .project-card:hover .project-chip {
    border-color: rgba(0, 51, 160, 0.22);
    background: rgba(0, 51, 160, 0.06);
  }

  :global(.dark) .project-chip {
    background: rgba(255, 255, 255, 0.06);
    color: var(--ink-80);
  }
</style>

