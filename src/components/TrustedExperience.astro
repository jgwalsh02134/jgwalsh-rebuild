---
// Trusted Experience section component
const institutions = [
  {
    name: "McLean Hospital",
    logo: "/images/McLean_Hospital_logo.svg",
  },
  {
    name: "Franciscan Children's",
    logo: "/images/Franciscan-Logo.svg",
  },
  {
    name: "Vision Data",
    logo: "/images/V-Data-Text-Logo.svg",
  },
  {
    name: "Siena University",
    logo: "/images/siena.svg",
  },
  {
    name: "Boston University",
    logo: "/images/Boston_University_wordmark.svg",
  },
];
---

<section class="section-trust" aria-labelledby="trust-title">
  <div class="container trust-container">
    <p class="trust-title" id="trust-title">Trusted Experience</p>
    <div class="trust-logos">
      {institutions.map((institution) => (
        <div class="trust-logo-item">
          <img
            src={institution.logo}
            alt={institution.name}
            class="trust-logo"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</section>
