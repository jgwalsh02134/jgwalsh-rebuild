---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const posts = [
  {
    title: "Behavioral Signals, Risk, and Decision Clarity",
    excerpt:
      "A practical way to frame observation, documentation, and decision thresholds so teams can act consistently under uncertainty.",
    date: "2026-01-18",
    category: "Behavioral Science",
    slug: "behavioral-signals-risk-decision-clarity",
  },
  {
    title: "From Messy Spreadsheets to Reliable Metrics",
    excerpt:
      "How to translate operational data into analysis-ready tables with defensible definitions, checks, and simple reporting primitives.",
    date: "2026-01-04",
    category: "Data Analysis",
    slug: "from-messy-spreadsheets-to-reliable-metrics",
  },
  {
    title: "Threat Modeling for Non-Security Teams",
    excerpt:
      "A lightweight approach to identifying failure modes, incentives, and abuse cases—without turning the process into theater.",
    date: "2025-12-12",
    category: "Tech",
    slug: "threat-modeling-for-non-security-teams",
  },
  {
    title: "Research Notes: Reproducibility as a Habit",
    excerpt:
      "A short workflow for naming, logging, and validating analyses so future-you (and reviewers) can rerun the work with confidence.",
    date: "2025-11-26",
    category: "Behavioral Science",
    slug: "research-notes-reproducibility-as-a-habit",
  },
] as const;

const featuredPost = posts[0];
---

<BaseLayout title="Blog – James Gregory Walsh" description="Blog posts by James (J.) Gregory Walsh.">
  <Header slot="header" currentPath="/blog" />

  <section class="blog-page" aria-labelledby="blog-title">
    <div class="container">
      <header class="blog-hero">
        <div class="blog-hero-copy">
          <h1 id="blog-title" class="blog-title">Blog</h1>
          <p class="blog-lead">Notes on behavioral analysis, research practice, and decision-ready communication.</p>
        </div>

        <article class="blog-featured" aria-label="Featured post">
          <p class="blog-featured-kicker">Featured Post</p>
          <h2 class="blog-featured-title">
            <a class="blog-link" href={`/blog/${featuredPost.slug}/`}>{featuredPost.title}</a>
          </h2>
          <p class="blog-featured-excerpt">{featuredPost.excerpt}</p>
          <div class="blog-meta">
            <time datetime={featuredPost.date}>{featuredPost.date}</time>
            <span class="blog-meta-sep" aria-hidden="true">•</span>
            <span class="blog-category">{featuredPost.category}</span>
          </div>
        </article>
      </header>

      <div class="blog-controls" aria-label="Blog filters">
        <div class="blog-filters" role="group" aria-label="Filter by category">
          <button type="button" class="blog-filter-btn is-active" aria-pressed="true">All</button>
          <button type="button" class="blog-filter-btn" aria-pressed="false">Behavioral Science</button>
          <button type="button" class="blog-filter-btn" aria-pressed="false">Data Analysis</button>
          <button type="button" class="blog-filter-btn" aria-pressed="false">Tech</button>
        </div>
      </div>

      <section class="blog-index" aria-label="Recent posts">
        <div class="blog-grid">
          {posts.map((post) => (
            <article class="blog-card" aria-label={`Post: ${post.title}`}>
              <div class="blog-card-meta">
                <time datetime={post.date} class="blog-card-date">{post.date}</time>
                <span class="blog-card-category">{post.category}</span>
              </div>
              <h3 class="blog-card-title">
                <a class="blog-link" href={`/blog/${post.slug}/`}>{post.title}</a>
              </h3>
              <p class="blog-card-excerpt">{post.excerpt}</p>
              <div class="blog-card-cta">
                <span class="blog-card-readmore">Read</span>
                <span class="blog-card-arrow" aria-hidden="true">→</span>
              </div>
            </article>
          ))}
        </div>
      </section>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .blog-page {
    padding: calc(var(--header-height) + var(--space-16)) 0 var(--space-20);
    position: relative;
  }

  .blog-hero {
    display: grid;
    gap: var(--space-10);
    margin-bottom: var(--space-12);
  }

  @media (min-width: 900px) {
    .blog-hero {
      grid-template-columns: 1fr 1.1fr;
      align-items: start;
      gap: var(--space-12);
    }
  }

  .blog-title {
    font-family: var(--font-serif);
    font-size: var(--text-4xl);
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: 1.05;
    margin-bottom: var(--space-4);
  }

  .blog-lead {
    color: var(--ink-60);
    font-size: var(--text-lg);
    line-height: 1.75;
    max-width: 70ch;
  }

  .blog-featured {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-10);
    position: relative;
    overflow: hidden;
    transition:
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .blog-featured::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(700px 240px at 10% -10%, rgba(0, 51, 160, 0.12), transparent 60%),
      radial-gradient(560px 260px at 95% 25%, rgba(255, 107, 0, 0.10), transparent 55%);
    pointer-events: none;
    opacity: 0.9;
  }

  .blog-featured > * {
    position: relative;
  }

  .blog-featured:hover {
    transform: translateY(-2px);
    border-color: var(--border-medium);
    box-shadow: 0 22px 70px rgba(0, 0, 0, 0.16);
  }

  .blog-featured-kicker {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--cern-blue);
    margin-bottom: var(--space-5);
  }

  .blog-featured-title {
    font-family: var(--font-serif);
    font-size: var(--text-2xl);
    font-weight: 500;
    letter-spacing: -0.01em;
    line-height: 1.15;
    margin-bottom: var(--space-4);
  }

  .blog-featured-excerpt {
    color: var(--ink-60);
    line-height: 1.75;
    margin-bottom: var(--space-6);
  }

  .blog-link {
    color: inherit;
    text-decoration: none;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .blog-link:hover {
    color: var(--cern-blue);
  }

  .blog-meta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--ink-60);
  }

  .blog-meta-sep {
    opacity: 0.6;
  }

  .blog-category {
    color: var(--cern-blue);
    font-weight: 600;
  }

  .blog-controls {
    margin-bottom: var(--space-8);
  }

  .blog-filters {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
  }

  .blog-filter-btn {
    min-height: 44px;
    padding: var(--space-2) var(--space-4);
    border-radius: 9999px;
    border: 1px solid var(--border-subtle);
    background: transparent;
    color: var(--ink-60);
    font-weight: 600;
    font-size: var(--text-sm);
    transition:
      border-color var(--duration-fast) var(--ease-out),
      color var(--duration-fast) var(--ease-out),
      background var(--duration-fast) var(--ease-out);
  }

  .blog-filter-btn:hover {
    color: var(--ink);
    border-color: var(--border-medium);
    background: var(--ink-10);
  }

  .blog-filter-btn.is-active {
    color: white;
    background: var(--cern-blue);
    border-color: rgba(0, 51, 160, 0.4);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: var(--space-8);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  .blog-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    box-shadow: var(--shadow-sm);
    display: grid;
    gap: var(--space-4);
    transition:
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .blog-card:hover {
    transform: translateY(-2px);
    border-color: var(--border-medium);
    box-shadow: var(--shadow-md);
  }

  .blog-card-meta {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: var(--space-4);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--ink-40);
    font-weight: 700;
  }

  .blog-card-category {
    color: var(--cern-blue);
    letter-spacing: 0.06em;
  }

  .blog-card-title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 500;
    letter-spacing: -0.01em;
    line-height: 1.2;
  }

  .blog-card-excerpt {
    color: var(--ink-60);
    line-height: 1.75;
  }

  .blog-card-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--cern-blue);
    font-weight: 700;
    font-size: var(--text-sm);
  }

  .blog-card-arrow {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .blog-card:hover .blog-card-arrow {
    transform: translateX(2px);
  }

  @media (prefers-reduced-motion: reduce) {
    .blog-featured,
    .blog-card,
    .blog-card-arrow {
      transition: none !important;
      transform: none !important;
    }
  }
</style>

