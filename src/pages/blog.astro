---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const mockPosts = [
  {
    title: "Behavioral Signals in High-Stakes Decision-Making",
    description:
      "A practical framework for noticing what changes, what stays stable, and what that implies when outcomes matter.",
    date: "2026-01-18",
    tags: ["Behavioral Science"],
    href: "/blog/behavioral-signals-in-high-stakes-decision-making",
    featured: true,
  },
  {
    title: "From Messy Notes to Clean Findings: A Lightweight Analysis Workflow",
    description:
      "A repeatable process for turning qualitative observations into structured, defensible conclusions without overfitting.",
    date: "2025-12-06",
    tags: ["Data Analysis"],
    href: "/blog/from-messy-notes-to-clean-findings",
    featured: false,
  },
  {
    title: "Operational Readiness: Building Checklists That Actually Reduce Risk",
    description:
      "How to design checklists that support experts under pressure—without creating busywork or blind spots.",
    date: "2025-11-21",
    tags: ["Tech"],
    href: "/blog/operational-readiness-checklists",
    featured: false,
  },
  {
    title: "Tagging, Taxonomy, and Retrieval: Notes That Stay Useful Over Time",
    description:
      "A simple tagging approach that improves recall, searching, and cross-linking as your knowledge base grows.",
    date: "2025-10-30",
    tags: ["Behavioral Science", "Tech"],
    href: "/blog/tagging-taxonomy-and-retrieval",
    featured: false,
  },
] as const;

const featuredPost = mockPosts.find((post) => post.featured) ?? mockPosts[0];
const recentPosts = mockPosts.filter((post) => post !== featuredPost);
---

<BaseLayout title="Blog – James Gregory Walsh" description="Blog posts by James (J.) Gregory Walsh.">
  <Header slot="header" currentPath="/blog" />

  <section class="page-section blog-page" aria-labelledby="blog-title">
    <div class="container blog-container">
      <header class="blog-header">
        <h1 id="blog-title" class="page-title">Blog</h1>
        <p class="page-lead">Writing on behavioral science, data analysis, and the practical tooling that supports real work.</p>
      </header>

      <article class="blog-hero" aria-label="Featured post">
        <div class="blog-hero-meta">
          <span class="blog-hero-eyebrow">Featured Post</span>
          <time class="blog-hero-date" datetime={featuredPost.date}>{featuredPost.date}</time>
        </div>

        <h2 class="blog-hero-title">
          <a class="blog-hero-link" href={featuredPost.href}>{featuredPost.title}</a>
        </h2>

        <p class="blog-hero-description">{featuredPost.description}</p>

        <div class="blog-hero-footer">
          <ul class="blog-tags" aria-label="Featured post tags">
            {featuredPost.tags.map((tag) => (
              <li class="blog-tag">{tag}</li>
            ))}
          </ul>

          <a class="blog-hero-cta" href={featuredPost.href}>
            <span>Read More</span>
            <svg class="blog-hero-cta-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </article>

      <div class="blog-filters" role="toolbar" aria-label="Filter posts by category">
        <button class="blog-filter is-active" type="button">All</button>
        <button class="blog-filter" type="button">Behavioral Science</button>
        <button class="blog-filter" type="button">Data Analysis</button>
        <button class="blog-filter" type="button">Tech</button>
      </div>

      <section class="blog-grid-section" aria-label="Recent posts">
        <div class="blog-grid">
          {recentPosts.map((post) => (
            <article class="blog-card">
              <div class="blog-card-top">
                <time class="blog-card-date" datetime={post.date}>{post.date}</time>
                <ul class="blog-tags" aria-label="Post tags">
                  {post.tags.map((tag) => (
                    <li class="blog-tag">{tag}</li>
                  ))}
                </ul>
              </div>

              <h3 class="blog-card-title">
                <a class="blog-card-link" href={post.href}>{post.title}</a>
              </h3>
              <p class="blog-card-description">{post.description}</p>

              <div class="blog-card-footer">
                <a class="blog-card-cta" href={post.href}>
                  <span>Read More</span>
                  <svg class="blog-card-cta-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </section>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .blog-page {
    position: relative;
  }

  .blog-page::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(700px 320px at 50% 0%, rgba(0, 51, 160, 0.10), transparent 60%),
      radial-gradient(520px 360px at 90% 35%, rgba(255, 107, 0, 0.10), transparent 55%);
    pointer-events: none;
  }

  :global(.dark) .blog-page::before {
    background:
      radial-gradient(700px 320px at 50% 0%, rgba(51, 102, 204, 0.08), transparent 60%),
      radial-gradient(520px 360px at 90% 35%, rgba(255, 133, 51, 0.08), transparent 55%);
  }

  /* Main container matches site standard via .container */
  .blog-container {
    position: relative;
    z-index: 1;
    max-width: var(--content-width);
  }

  .blog-header {
    margin-bottom: var(--space-10);
  }

  .blog-hero {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-10);
    margin-bottom: var(--space-10);
    transition: transform var(--duration-normal) var(--ease-out),
      border-color var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
  }

  .blog-hero:hover {
    transform: translateY(-2px);
    border-color: var(--border-medium);
    box-shadow: 0 18px 60px rgba(0, 0, 0, 0.14);
  }

  .blog-hero-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    margin-bottom: var(--space-5);
  }

  .blog-hero-eyebrow {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: 9999px;
    background: rgba(0, 51, 160, 0.06);
    border: 1px solid rgba(0, 51, 160, 0.14);
    color: var(--cern-blue);
    font-size: var(--text-xs);
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  :global(.dark) .blog-hero-eyebrow {
    background: rgba(51, 102, 204, 0.10);
    border-color: rgba(51, 102, 204, 0.22);
  }

  .blog-hero-date {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
    font-variant-numeric: tabular-nums;
    white-space: nowrap;
  }

  .blog-hero-title {
    font-family: var(--font-serif);
    font-size: clamp(1.6rem, 1.25rem + 1.6vw, 2.25rem);
    font-weight: 500;
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .blog-hero-link {
    color: inherit;
    text-decoration: none;
  }

  .blog-hero-link:hover {
    color: var(--cern-blue);
  }

  .blog-hero-description {
    color: var(--text-secondary);
    font-size: var(--text-lg);
    line-height: 1.7;
    margin-bottom: var(--space-8);
  }

  .blog-hero-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .blog-tag {
    display: inline-flex;
    align-items: center;
    padding: 0.22rem 0.55rem;
    border-radius: 9999px;
    border: 1px solid var(--border-subtle);
    background: rgba(255, 255, 255, 0.04);
    color: var(--text-tertiary);
    font-size: 0.75rem;
    font-weight: 600;
  }

  :global(.dark) .blog-tag {
    background: rgba(255, 255, 255, 0.03);
    border-color: rgba(255, 255, 255, 0.10);
  }

  .blog-hero-cta,
  .blog-card-cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 700;
    color: var(--cern-blue);
    transition: transform var(--duration-fast) var(--ease-out),
      opacity var(--duration-fast) var(--ease-out);
  }

  .blog-hero-cta:hover,
  .blog-card-cta:hover {
    transform: translate(2px, -2px);
  }

  .blog-hero-cta-icon,
  .blog-card-cta-icon {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .blog-hero-cta:hover .blog-hero-cta-icon,
  .blog-card-cta:hover .blog-card-cta-icon {
    transform: translateX(2px);
  }

  .blog-filters {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin: 0 0 var(--space-8);
  }

  .blog-filter {
    padding: 0.55rem 0.85rem;
    border-radius: 9999px;
    border: 1px solid var(--border-subtle);
    background: rgba(255, 255, 255, 0.04);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    font-weight: 600;
    transition: background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  .blog-filter:hover {
    border-color: var(--border-medium);
    transform: translateY(-1px);
  }

  .blog-filter.is-active {
    background: rgba(0, 51, 160, 0.10);
    border-color: rgba(0, 51, 160, 0.25);
    color: var(--text-primary);
  }

  :global(.dark) .blog-filter.is-active {
    background: rgba(51, 102, 204, 0.18);
    border-color: rgba(51, 102, 204, 0.35);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
  }

  @media (min-width: 720px) {
    .blog-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  .blog-card {
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    padding: var(--space-8);
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    transition: transform var(--duration-normal) var(--ease-out),
      border-color var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
    min-height: 220px;
  }

  .blog-card:hover {
    transform: translateY(-2px);
    border-color: var(--border-medium);
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.14);
  }

  .blog-card-top {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .blog-card-date {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    font-variant-numeric: tabular-nums;
    white-space: nowrap;
  }

  .blog-card-title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 500;
    line-height: 1.2;
    letter-spacing: -0.02em;
    margin: 0;
  }

  .blog-card-link {
    color: var(--text-primary);
    text-decoration: none;
  }

  .blog-card-link:hover {
    color: var(--cern-blue);
  }

  .blog-card-description {
    color: var(--text-secondary);
    font-size: var(--text-sm);
    line-height: 1.7;
    margin: 0;
    flex: 1 1 auto;
  }

  .blog-card-footer {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding-top: var(--space-2);
  }

  @media (max-width: 520px) {
    .blog-hero {
      padding: var(--space-8);
    }

    .blog-card {
      padding: var(--space-6);
    }
  }
</style>

