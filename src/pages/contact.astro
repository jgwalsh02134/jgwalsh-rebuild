---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Contact – James Gregory Walsh"
  description="Contact James (J.) Gregory Walsh for professional inquiries related to psychology, behavioral analysis, data-informed research, and investigative readiness."
>
  <Header slot="header" currentPath="/contact" />

  <!-- Body content adapted from pasted HTML; Tailwind utilities replaced with page-scoped CSS -->
  <section class="contact-page" aria-labelledby="contact-title">
    <div class="contact-frame">
      <div class="contact-card fade-in">
        <div class="contact-identity fade-in stagger-1">
          <div class="contact-monogram" aria-hidden="true">
            <span class="contact-monogram-text">JGW</span>
          </div>
          <h1 id="contact-title" class="contact-title">J. Gregory (Greg) Walsh</h1>
          <p class="contact-subtitle">Add to contacts with one click.</p>
        </div>

        <div class="contact-actions fade-in stagger-2">
          <a href="mailto:jgwalsh@proton.me" class="contact-action">
            <span class="contact-action-left">
              <img src="/icons/icons8-protonmail-2.svg" alt="" class="contact-action-leading-icon" aria-hidden="true" loading="lazy" />
              <span class="contact-action-text">jgwalsh@proton.me</span>
            </span>
            <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
          <a href="tel:+16173833745" class="contact-action">
            <span class="contact-action-left">
              <img src="/icons/icons8-phone-2.svg" alt="" class="contact-action-leading-icon" aria-hidden="true" loading="lazy" />
              <span class="contact-action-text">+1 (617) 383-3745</span>
            </span>
            <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <div class="contact-links fade-in stagger-3" aria-label="Professional links">
          <div class="contact-links-grid">
            <a
              href="https://www.linkedin.com/in/jgregorywalsh"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="contact-link"
            >
              <img src="/icons/icons8-linkedin-2.svg" alt="LinkedIn" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label">LinkedIn</span>
            </a>
            <a
              href="https://www.usajobs.gov/applicant/profile/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="USAJobs"
              class="contact-link"
            >
              <img src="/icons/usa-flag-icon.svg" alt="USAJobs" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label">USAJobs.gov</span>
            </a>
            <a
              href="https://orcid.org/0000-0002-4420-5724"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="ORCID"
              class="contact-link"
            >
              <img src="/icons/orcid.logo.icon.svg" alt="ORCID" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-orcid">ORCID</span>
            </a>
            <a
              href="https://saintsnetwork.siena.edu/profile/gregwalsh/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Siena College"
              class="contact-link"
            >
              <img src="/icons/siena-icon.svg" alt="Siena College" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-siena">Siena College</span>
            </a>
            <a href="mailto:jgwalsh@bu.edu" aria-label="Boston University" class="contact-link">
              <img src="/icons/bu-icon.svg" alt="Boston University" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-bu">Boston University</span>
            </a>
          </div>
        </div>

        <div class="contact-vcard fade-in stagger-4">
          <a
            href="/assets/j-gregory-walsh.vcf"
            type="text/vcard"
            aria-label="Open J. Gregory Walsh vCard in Contacts"
            class="contact-vcard-btn"
          >
            <span class="contact-vcard-btn-text">Add to Contacts</span>
            <svg class="contact-vcard-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 0 1 8 0zM12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-page {
    min-height: calc(100vh - var(--header-height));
    padding-top: calc(var(--header-height) + var(--space-16));
    padding-bottom: var(--space-20);
    display: grid;
    place-items: start center;
    background: var(--bg-primary);
    position: relative;
  }

  .contact-page::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(700px 320px at 50% 0%, rgba(0, 51, 160, 0.10), transparent 60%),
      radial-gradient(520px 360px at 90% 35%, rgba(255, 107, 0, 0.10), transparent 55%);
    pointer-events: none;
  }

  .contact-frame {
    width: 100%;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 1;
    display: grid;
    place-items: center;
  }

  .contact-card {
    width: 100%;
    max-width: 480px;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-10);
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    position: relative;
  }

  .contact-identity {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .contact-monogram {
    width: clamp(80px, 18vw, 104px);
    height: clamp(80px, 18vw, 104px);
    border-radius: var(--radius-full);
    background: rgba(0, 51, 160, 0.10);
    display: grid;
    place-items: center;
    border: 4px solid var(--bg-primary);
    box-shadow: var(--shadow-sm);
    margin-bottom: var(--space-2);
  }

  .contact-monogram-text {
    font-weight: 800;
    font-size: clamp(1.75rem, 4.8vw, 2.25rem);
    letter-spacing: -0.02em;
    color: var(--cern-blue);
  }

  .contact-title {
    font-family: var(--font-serif);
    font-weight: 500;
    font-size: clamp(1.625rem, 3.8vw, 2rem);
    line-height: 1.15;
    color: var(--text-primary);
  }

  .contact-subtitle {
    font-size: 0.9375rem;
    color: var(--text-tertiary);
    max-width: none;
  }

  .contact-actions {
    display: grid;
    gap: var(--space-3);
  }

  .contact-action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: 0.95rem 1rem;
    border-radius: var(--radius-md);
    background: var(--bg-card);
    border: 1px solid var(--border-medium);
    color: var(--text-primary);
    min-height: 48px;
    transition: background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .contact-action:hover {
    border-color: rgba(0, 51, 160, 0.35);
    background: rgba(0, 51, 160, 0.06);
    transform: translate(2px, -2px);
    box-shadow: var(--shadow-sm);
  }

  .contact-action:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.18);
    border-color: rgba(0, 51, 160, 0.45);
  }

  .contact-action-left {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    min-width: 0;
  }

  .contact-action-leading-icon {
    width: 22px;
    height: 22px;
    opacity: 0.75;
    flex: 0 0 auto;
  }

  .contact-action-text {
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 1rem;
  }

  .contact-action:hover .contact-action-text {
    color: var(--text-primary);
  }

  .contact-action-icon {
    color: var(--text-tertiary);
    opacity: 0.9;
    flex: 0 0 auto;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .contact-action:hover .contact-action-icon {
    color: var(--cern-blue);
  }

  .contact-links {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .contact-links-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-4);
  }

  .contact-link {
    text-align: center;
    padding: var(--space-3);
    border-radius: var(--radius-md);
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid var(--border-subtle);
    color: var(--text-secondary);
    min-height: 84px;
    display: grid;
    align-content: center;
    justify-items: center;
    gap: var(--space-2);
    transition: background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .contact-link:hover {
    border-color: var(--border-medium);
    color: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  .contact-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.18);
    border-color: rgba(0, 51, 160, 0.45);
  }

  .contact-link-icon {
    width: 36px;
    height: 36px;
    display: block;
    margin: 0 auto;
    opacity: 0.6;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover .contact-link-icon {
    opacity: 1;
  }

  .contact-link-label {
    display: block;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    max-width: none;
  }

  .contact-link:hover .contact-link-label {
    color: var(--cern-blue);
  }

  .contact-link-label-orcid {
    /* Keep the original page's subtle “ORCID is green” cue, but aligned to the token system */
    color: var(--text-tertiary);
  }

  .contact-link:hover .contact-link-label-orcid {
    color: #65a30d; /* lime-ish */
  }

  .contact-link:hover .contact-link-label-siena {
    color: #d97706; /* amber-ish */
  }

  .contact-link:hover .contact-link-label-bu {
    color: #dc2626; /* red-ish */
  }

  .contact-vcard {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .contact-vcard-btn {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: 1rem 1.25rem;
    border-radius: var(--radius-md);
    background: var(--cern-blue);
    color: white;
    font-weight: 700;
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 2px 8px rgba(0, 51, 160, 0.25);
    min-height: 52px;
    transition: background var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .contact-vcard-btn:hover {
    background: var(--cern-blue-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 51, 160, 0.35);
  }

  .contact-vcard-btn:active {
    transform: translateY(0) scale(0.99);
  }

  .contact-vcard-btn:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.25);
  }

  .contact-vcard-btn-text {
    flex: 1 1 auto;
    text-align: center;
    max-width: none;
  }

  .contact-vcard-btn-icon {
    opacity: 0.85;
  }

  @media (min-width: 520px) {
    .contact-card { padding: var(--space-12); }

    .contact-links-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  @media (min-width: 768px) {
    .contact-frame {
      padding: 0 var(--space-12);
    }
  }

  @media (min-width: 900px) {
    .contact-card {
      max-width: 540px;
    }

    .contact-links-grid {
      grid-template-columns: repeat(5, minmax(0, 1fr));
    }
  }

  @media (min-width: 1024px) {
    .contact-page {
      place-items: center;
      padding-bottom: var(--space-24);
    }

    .contact-frame {
      max-width: 1040px;
      border-radius: calc(var(--radius-lg) + 8px);
      border: 1px solid var(--border-subtle);
      background: rgba(255, 255, 255, 0.55);
      backdrop-filter: blur(14px);
      -webkit-backdrop-filter: blur(14px);
      box-shadow: 0 18px 60px rgba(0, 0, 0, 0.10);
      padding: var(--space-16) var(--space-12);
    }

    :global(.dark) .contact-frame {
      background: rgba(10, 10, 10, 0.55);
      border-color: rgba(255, 255, 255, 0.15);
      box-shadow: 0 18px 60px rgba(0, 0, 0, 0.35);
    }
  }
</style>