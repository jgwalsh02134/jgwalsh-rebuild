---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Contact – James Gregory Walsh"
  description="Contact James (J.) Gregory Walsh for professional inquiries related to psychology, behavioral analysis, data-informed research, and investigative readiness."
>
  <Header slot="header" currentPath="/contact" />

  <!-- Body content adapted from pasted HTML; Tailwind utilities replaced with page-scoped CSS -->
  <section class="contact-page" aria-labelledby="contact-title">
    <div class="contact-frame">
      <div class="contact-card fade-in">
        <div class="contact-identity fade-in stagger-1">
          <div class="contact-monogram" aria-hidden="true">
            <span class="contact-monogram-text">JGW</span>
          </div>
          <h1 id="contact-title" class="contact-title">J. Gregory (Greg) Walsh</h1>
          <p class="contact-subtitle">Add to contacts with one click.</p>
        </div>

        <div class="contact-actions fade-in stagger-2">
          <div class="contact-action-row">
            <a href="mailto:jgregorywalsh@icloud.com" class="contact-action">
              <span class="contact-action-left">
                <img src="/icons/icloud-icon-1.svg" alt="" class="contact-action-leading-icon" aria-hidden="true" loading="lazy" />
                <span class="contact-action-text">jgregorywalsh@icloud.com</span>
              </span>
              <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <button
              type="button"
              class="contact-copy"
              data-copy-value="jgregorywalsh@icloud.com"
              aria-label="Copy email address"
              title="Copy"
            >
              <svg class="contact-copy-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <rect x="9" y="9" width="13" height="13" rx="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
