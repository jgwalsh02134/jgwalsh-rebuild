                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 6L9 17l-5-5"></path>
              </svg>
              <span class="sr-only">Copy</span>
            </button>
          </div>

          <div class="contact-action-row">
            <a href="tel:+16173833745" class="contact-action">
              <span class="contact-action-left">
                <img src="/icons/icons8-phone-2.svg" alt="" class="contact-action-leading-icon" aria-hidden="true" loading="lazy" />
                <span class="contact-action-text">+1 (617) 383-3745</span>
              </span>
              <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
            <button
              type="button"
              class="contact-copy"
              data-copy-value="+1 (617) 383-3745"
              aria-label="Copy phone number"
              title="Copy"
            >
              <svg class="contact-copy-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <rect x="9" y="9" width="13" height="13" rx="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
              <svg class="contact-copy-check" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 6L9 17l-5-5"></path>
              </svg>
              <span class="sr-only">Copy</span>
            </button>
          </div>
        </div>

        <div class="contact-links fade-in stagger-3" aria-label="Professional links">
          <div class="contact-links-grid">
            <a
              href="https://www.linkedin.com/in/jgregorywalsh"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="LinkedIn"
              class="contact-link"
            >
              <img src="/icons/icons8-linkedin-2.svg" alt="LinkedIn" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label">LinkedIn</span>
            </a>
            <a
              href="https://www.usajobs.gov/applicant/profile/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="USAJobs"
              class="contact-link"
            >
              <img src="/icons/usa-flag-icon.svg" alt="USAJobs" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label">USAJobs.gov</span>
            </a>
            <a
              href="https://orcid.org/0000-0002-4420-5724"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="ORCID"
              class="contact-link"
            >
              <img src="/icons/orcid.logo.icon.svg" alt="ORCID" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-orcid">ORCID</span>
            </a>
            <a
              href="https://saintsnetwork.siena.edu/profile/gregwalsh/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Siena College"
              class="contact-link"
            >
              <img src="/icons/siena-icon.svg" alt="Siena College" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-siena">Siena College</span>
            </a>
            <a href="mailto:jgwalsh@bu.edu" aria-label="Boston University" class="contact-link">
              <img src="/icons/bu-icon.svg" alt="Boston University" class="contact-link-icon" loading="lazy" />
              <span class="contact-link-label contact-link-label-bu">Boston University</span>
            </a>
          </div>
        </div>

        <div class="contact-vcard fade-in stagger-4">
          <a
            href="/assets/j-gregory-walsh.vcf"
            type="text/vcard"
            aria-label="Open J. Gregory Walsh vCard in Contacts"
            class="contact-vcard-btn"
          >
            <span class="contact-vcard-btn-text">Add to Contacts</span>
            <svg class="contact-vcard-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 0 1 8 0zM12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  // @ts-nocheck
  /** @type {HTMLButtonElement[]} */
  const buttons = Array.from(document.querySelectorAll(".contact-copy")).filter(
    (el) => el instanceof HTMLButtonElement,
  );

  /** @type {WeakMap<HTMLButtonElement, number>} */
  const timers = new WeakMap();

  async function copyText(/** @type {string} */ text) {
    if (navigator.clipboard?.writeText) {
      await navigator.clipboard.writeText(text);
      return;
    }
    // Fallback for older browsers / permission edge-cases.
    const ta = document.createElement("textarea");
    ta.value = text;
    ta.setAttribute("readonly", "");
    ta.style.position = "fixed";
    ta.style.top = "-9999px";
    ta.style.left = "-9999px";
    document.body.appendChild(ta);
    ta.select();
    document.execCommand("copy");
    document.body.removeChild(ta);
  }

  buttons.forEach((btn) => {
    btn.addEventListener("click", async (e) => {
      // Defensive: if DOM changes place this inside a link, prevent navigation.
      e.preventDefault();
      e.stopPropagation();

      const value = btn.dataset.copyValue || "";
      if (!value) return;

      const pending = timers.get(btn);
      if (pending) window.clearTimeout(pending);

      try {
        await copyText(value);
        btn.classList.add("is-copied");
        btn.disabled = true;
        const t = window.setTimeout(() => {
          btn.classList.remove("is-copied");
          btn.disabled = false;
          timers.delete(btn);
        }, 2000);
        timers.set(btn, t);
      } catch {
        // No-op: avoid noisy failures; user can still click the link.
      }
    });
  });
</script>

<style>
  .contact-page {
    min-height: calc(100vh - var(--header-height));
    padding-top: calc(var(--header-height) + var(--space-16));
    padding-bottom: var(--space-20);
    display: grid;
    place-items: start center;
    background: var(--bg-primary);
    position: relative;
  }

  .contact-page::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(700px 320px at 50% 0%, rgba(0, 51, 160, 0.10), transparent 60%),
      radial-gradient(520px 360px at 90% 35%, rgba(255, 107, 0, 0.10), transparent 55%);
    pointer-events: none;
  }

  .contact-frame {
    width: 100%;
    padding: 0 var(--space-6);
    position: relative;
    z-index: 1;
    display: grid;
    place-items: center;
  }

  .contact-card {
    width: 100%;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.55);
    border: 1.5px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    padding: var(--space-10);
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
    position: relative;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: all var(--duration-normal) var(--ease-out);
  }

  .contact-card:hover {
    border-color: rgba(0, 51, 160, 0.2);
    box-shadow: 0 28px 80px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 380px) {
    .contact-card {
      padding: var(--space-6);
      gap: var(--space-6);
    }
  }

  @media (min-width: 640px) {
    .contact-card {
      max-width: 520px;
      padding: var(--space-12);
      gap: var(--space-10);
    }
  }

  :global(.dark) .contact-card {
    background: rgba(10, 10, 10, 0.55);
    border-color: rgba(255, 255, 255, 0.10);
  }

  .contact-identity {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .contact-monogram {
    width: clamp(80px, 18vw, 104px);
    height: clamp(80px, 18vw, 104px);
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, rgba(0, 51, 160, 0.15), rgba(255, 107, 0, 0.05));
    display: grid;
    place-items: center;
    border: 3px solid var(--bg-primary);
    box-shadow: 0 8px 24px rgba(0, 51, 160, 0.12);
    margin-bottom: var(--space-2);
    transition: all var(--duration-normal) var(--ease-out);
  }

  .contact-identity:hover .contact-monogram {
    transform: scale(1.05);
    box-shadow: 0 12px 36px rgba(0, 51, 160, 0.18);
  }

  .contact-monogram-text {
    font-weight: 800;
    font-size: clamp(1.75rem, 4.8vw, 2.25rem);
    letter-spacing: -0.02em;
    color: var(--cern-blue);
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .contact-identity:hover .contact-monogram-text {
    transform: scale(1.08);
  }

  .contact-title {
    font-family: var(--font-serif);
    font-weight: 500;
    font-size: clamp(1.625rem, 3.8vw, 2rem);
    line-height: 1.15;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  .contact-subtitle {
    font-size: 0.8125rem;
    font-style: italic;
    color: var(--text-tertiary);
    letter-spacing: 0.015em;
    max-width: none;
  }

  .contact-status {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-1) var(--space-3);
    border-radius: 9999px;
    border: 1px solid var(--border-subtle);
    background: rgba(255, 255, 255, 0.04);
    color: var(--text-secondary);
    font-size: var(--text-xs);
    font-weight: 700;
    letter-spacing: 0.02em;
    margin-top: var(--space-1);
  }

  .contact-status-dot {
    color: #16a34a;
    position: relative;
    display: inline-grid;
    place-items: center;
    width: 1em;
    height: 1em;
    line-height: 1;
  }

  .contact-status-dot::after {
    content: "";
    position: absolute;
    inset: -6px;
    border-radius: 9999px;
    border: 1px solid rgba(22, 163, 74, 0.28);
    opacity: 0.0;
    transform: scale(0.86);
    animation: contactPulse 1.8s var(--ease-out) infinite;
  }

  @keyframes contactPulse {
    0% { opacity: 0.0; transform: scale(0.86); }
    35% { opacity: 0.55; }
    100% { opacity: 0.0; transform: scale(1.22); }
  }

  .contact-actions {
    display: grid;
    gap: var(--space-3);
  }

  .contact-action-row {
    display: flex;
    align-items: stretch;
    gap: var(--space-3);
  }

  .contact-action-row .contact-action {
    flex: 1 1 auto;
    min-width: 0;
  }

  .contact-action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: 0.95rem 1rem;
    border-radius: var(--radius-md);
    background: rgba(0, 51, 160, 0.02);
    border: 1.5px solid var(--border-subtle);
    color: var(--text-primary);
    min-height: 48px;
    box-shadow: 0 2px 8px rgba(0, 51, 160, 0.04);
    transition:
      all var(--duration-normal) var(--ease-out);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  :global(.dark) .contact-action {
    background: rgba(51, 102, 204, 0.04);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .contact-action:hover {
    border-color: rgba(0, 51, 160, 0.35);
    background: rgba(0, 51, 160, 0.08);
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 51, 160, 0.12);
  }

  .contact-action:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.2);
    border-color: rgba(0, 51, 160, 0.5);
  }

  .contact-action-left {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    min-width: 0;
  }

  .contact-action-leading-icon {
    width: 22px;
    height: 22px;
    opacity: 0.75;
    flex: 0 0 auto;
  }

  .contact-action-text {
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 1rem;
    transition: color var(--duration-fast) var(--ease-out);
  }

  @media (max-width: 380px) {
    .contact-action-text {
      font-size: 0.9375rem;
    }
  }

  .contact-action:hover .contact-action-text {
    color: var(--text-primary);
  }

  .contact-action-icon {
    color: var(--text-tertiary);
    opacity: 1;
    flex: 0 0 auto;
    transition:
      transform var(--duration-fast) var(--ease-out),
      color var(--duration-fast) var(--ease-out);
  }

  .contact-action:hover .contact-action-icon {
    color: var(--cern-blue);
    transform: translateX(2px);
  }

  .contact-copy {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    border: 1.5px solid var(--border-medium);
    background: rgba(0, 51, 160, 0.05);
    color: var(--text-secondary);
    display: grid;
    place-items: center;
    transition:
      all var(--duration-normal) var(--ease-out);
    opacity: 0.55;
    pointer-events: auto;
    transform: none;
  }

  @media (min-width: 768px) {
    .contact-copy {
      opacity: 0;
      pointer-events: none;
      transform: translateY(2px);
    }
  }

  .contact-copy:hover {
    border-color: rgba(0, 51, 160, 0.35);
    background: rgba(0, 51, 160, 0.12);
    color: var(--cern-blue);
    transform: translateY(0) scale(1.05);
  }

  .contact-copy:active {
    transform: translateY(0) scale(0.98);
  }

  .contact-action-row:hover .contact-copy,
  .contact-copy:focus-visible {
    opacity: 1;
    pointer-events: auto;
  }


  .contact-copy-check {
    display: none;
  }

  .contact-copy.is-copied {
    opacity: 1;
    pointer-events: auto;
    border-color: rgba(22, 163, 74, 0.5);
    background: rgba(22, 163, 74, 0.12);
    color: #15803d;
    animation: copySuccess 0.4s var(--ease-out);
  }

  @keyframes copySuccess {
    0% { transform: scale(0.95); }
    50% { transform: scale(1.08); }
    100% { transform: scale(1); }
  }

  :global(.dark) .contact-copy.is-copied {
    border-color: rgba(34, 197, 94, 0.35);
    background: rgba(34, 197, 94, 0.12);
    color: rgba(134, 239, 172, 0.95);
  }

  .contact-copy.is-copied .contact-copy-icon {
    display: none;
  }

  .contact-copy.is-copied .contact-copy-check {
    display: block;
  }

  @media (prefers-reduced-motion: reduce) {
    .contact-status-dot::after {
      animation: none !important;
    }
  }

  .contact-links {
    padding-top: var(--space-8);
    border-top: 1.5px solid var(--border-subtle);
  }

  .contact-links-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
  }

  @media (min-width: 640px) {
    .contact-links-grid {
      gap: var(--space-5);
    }
  }

  .contact-link {
    text-align: center;
    flex: 0 1 calc((100% - var(--space-4)) / 2);
    padding: var(--space-3) var(--space-4);
    border-radius: 18px;
    background: rgba(255, 255, 255, 0.55);
    border: 1px solid var(--border-subtle);
    color: var(--text-secondary);
    min-height: 80px;
    aspect-ratio: auto;
    display: grid;
    align-content: center;
    justify-items: center;
    gap: var(--space-2);
    transition: background var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
    box-shadow: var(--shadow-sm);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  :global(.dark) .contact-link {
    background: rgba(10, 10, 10, 0.55);
    border-color: rgba(255, 255, 255, 0.10);
  }

  .contact-link:hover {
    border-color: rgba(0, 51, 160, 0.28);
    color: var(--text-primary);
    background: rgba(0, 51, 160, 0.12);
    transform: translateY(-4px);
    box-shadow: 0 12px 36px rgba(0, 51, 160, 0.16);
  }

  .contact-link:focus-visible {
    outline: 3px solid var(--cern-blue);
    outline-offset: 2px;
    border-color: rgba(0, 51, 160, 0.5);
    box-shadow: 0 0 0 1px var(--cern-blue);
  }

  .contact-link-icon {
    width: 40px;
    height: 40px;
    display: block;
    margin: 0 auto;
    opacity: 0.92;
    object-fit: contain;
    transition:
      opacity var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      filter var(--duration-fast) var(--ease-out);
  }

  .contact-link:hover .contact-link-icon {
    opacity: 1;
    transform: translateY(-2px) scale(1.08);
    filter: drop-shadow(0 4px 12px rgba(0, 51, 160, 0.2));
  }

  /* Institutional marks can be visually wider; scale slightly for balance. */
  .contact-link[aria-label="Siena College"] .contact-link-icon,
  .contact-link[aria-label="Boston University"] .contact-link-icon {
    width: 44px;
    height: 44px;
  }

  .contact-link-label {
    display: block;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-tertiary);
    max-width: none;
    letter-spacing: 0.02em;
    transition: color var(--duration-fast) var(--ease-out);
  }

  .contact-link:hover .contact-link-label {
    color: var(--text-primary);
  }

  .contact-link-label-orcid {
    /* Keep the original page's subtle “ORCID is green” cue, but aligned to the token system */
    color: var(--text-tertiary);
  }

  .contact-link:hover .contact-link-label-orcid {
    color: #65a30d; /* lime-ish */
  }

  .contact-link:hover .contact-link-label-siena {
    color: #d97706; /* amber-ish */
  }

  .contact-link:hover .contact-link-label-bu {
    color: #dc2626; /* red-ish */
  }

  .contact-vcard {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .contact-vcard-btn {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: 1rem 1.25rem;
    border-radius: var(--radius-md);
    background: var(--cern-blue);
    color: white;
    font-weight: 700;
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: 0 2px 8px rgba(0, 51, 160, 0.25);
    min-height: 52px;
    transition: background var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .contact-vcard-btn:hover {
    background: var(--cern-blue-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 51, 160, 0.35);
  }

  .contact-vcard-btn:active {
    transform: translateY(0) scale(0.99);
  }

  .contact-vcard-btn:focus-visible {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 51, 160, 0.25);
  }

  .contact-vcard-btn-text {
    flex: 1 1 auto;
    text-align: center;
    max-width: none;
  }

  .contact-vcard-btn-icon {
    opacity: 0.85;
  }

  @media (min-width: 520px) {
    .contact-card { padding: var(--space-12); }

    .contact-link {
      flex-basis: calc((100% - 2 * var(--space-4)) / 3);
      aspect-ratio: 1 / 1;
      min-height: 96px;
      padding: var(--space-4);
    }
  }

  @media (min-width: 640px) {
    .contact-link {
      flex-basis: calc((100% - 2 * var(--space-5)) / 3);
    }
  }

  @media (min-width: 768px) {
