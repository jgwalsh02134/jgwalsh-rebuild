<script>
  // @ts-nocheck
  const announcer = document.getElementById("copy-announce");

  /** @type {HTMLButtonElement[]} */
  const buttons = Array.from(document.querySelectorAll(".contact-copy")).filter(
    (el) => el instanceof HTMLButtonElement,
  );

  /** @type {WeakMap<HTMLButtonElement, number>} */
  const timers = new WeakMap();

  async function copyText(/** @type {string} */ text) {
    if (navigator.clipboard?.writeText) {
      await navigator.clipboard.writeText(text);
      return;
    }
    const ta = document.createElement("textarea");
    ta.value = text;
    ta.setAttribute("readonly", "");
    ta.style.position = "fixed";
    ta.style.top = "-9999px";
    ta.style.left = "-9999px";
    document.body.appendChild(ta);
    ta.select();
    document.execCommand("copy");
    document.body.removeChild(ta);
  }

  buttons.forEach((btn) => {
    btn.addEventListener("click", async (e) => {
      e.preventDefault();
      e.stopPropagation();

      const value = btn.dataset.copyValue || "";
      if (!value) return;

      const pending = timers.get(btn);
      if (pending) window.clearTimeout(pending);

      try {
        await copyText(value);
        btn.classList.add("is-copied");
        btn.disabled = true;

        // Announce to screen readers
        if (announcer) {
          announcer.textContent = "Copied to clipboard";
        }

        const t = window.setTimeout(() => {
          btn.classList.remove("is-copied");
          btn.disabled = false;
          timers.delete(btn);
          if (announcer) announcer.textContent = "";
        }, 2000);
        timers.set(btn, t);
      } catch {
        // No-op: user can still click the link directly.
      }
    });
  });
</script>

<style>
  /* ═══════════════════════════════════════════════════════════════
     CONTACT PAGE — Mobile-first
     Base styles target < 768px (phone).
     Optimized to fit on a 667px viewport (iPhone SE) without scroll.
     Progressive enhancement via min-width queries.
     ═══════════════════════════════════════════════════════════════ */

  .contact-page {
    min-height: calc(100vh - var(--header-height));
    padding-top: calc(var(--header-height) + var(--space-4));
    padding-bottom: var(--space-6);
    display: grid;
    place-items: start center;
    background: var(--bg-primary);
    position: relative;
  }

  .contact-page::before {
    content: "";
    position: absolute;
    inset: 0;
    background:
      radial-gradient(700px 320px at 50% 0%, rgba(0, 51, 160, 0.10), transparent 60%),
      radial-gradient(520px 360px at 90% 35%, rgba(255, 107, 0, 0.10), transparent 55%);
    pointer-events: none;
  }

  /* ── Frame: just padding on mobile, no glass ── */
  .contact-frame {
    width: 100%;
    padding: 0 var(--space-3);
    position: relative;
    z-index: 1;
    display: grid;
    place-items: center;
  }

  /* ── Card: glass effect, single layer ── */
  .contact-card {
    width: 100%;
    max-width: 480px;
    background: rgba(255, 255, 255, 0.6);
    border: 1.5px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    padding: var(--space-4) var(--space-5);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: relative;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: border-color var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
  }

  :global(.dark) .contact-card {
    background: rgba(10, 10, 10, 0.6);
    border-color: rgba(255, 255, 255, 0.10);
  }

  /* ═══════════════════════════════════════
     IDENTITY — inline row on mobile
     ═══════════════════════════════════════ */

  .contact-identity-row {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .contact-monogram {
    width: 44px;
    height: 44px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, rgba(0, 51, 160, 0.15), rgba(255, 107, 0, 0.05));
    display: grid;
    place-items: center;
    border: 2px solid var(--bg-primary);
    box-shadow: 0 4px 12px rgba(0, 51, 160, 0.12);
    flex-shrink: 0;
    transition: all var(--duration-normal) var(--ease-out);
  }

  .contact-monogram-text {
    font-weight: 800;
    font-size: 0.9375rem;
    letter-spacing: -0.02em;
    color: var(--cern-blue);
  }

  .contact-identity-text {
    min-width: 0;
  }

  .contact-title {
    font-family: var(--font-serif);
    font-weight: 500;
    font-size: clamp(1.25rem, 3.5vw, 1.5rem);
    line-height: 1.2;
    color: var(--text-primary);
    letter-spacing: -0.01em;
  }

  /* ═══════════════════════════════════════
     QUICK ACTIONS — vCard (compact on mobile)
     ═══════════════════════════════════════ */

  .contact-vcard-btn {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: 0.625rem 1rem;
    border-radius: var(--radius-md);
    background: transparent;
    color: var(--cern-blue);
    font-weight: 600;
    font-size: var(--text-xs);
    border: 1.5px solid var(--cern-blue);
    min-height: 44px;
    transition: background var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      box-shadow var(--duration-fast) var(--ease-out);
  }

  .contact-vcard-btn:hover {
    background: rgba(0, 51, 160, 0.08);
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 51, 160, 0.15);
  }

  .contact-vcard-btn:active {
    transform: translateY(0) scale(0.99);
  }

  .contact-vcard-btn:focus-visible {
    outline: 3px solid var(--cern-blue);
    outline-offset: 2px;
  }

  .contact-btn-icon {
    flex-shrink: 0;
    opacity: 0.85;
    width: 18px;
    height: 18px;
  }

  /* ═══════════════════════════════════════
     PRIMARY ACTIONS — Call + Email
     ═══════════════════════════════════════ */

  .contact-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .contact-action-row {
    display: flex;
    align-items: stretch;
    gap: var(--space-2);
  }

  .contact-action-row .contact-action {
    flex: 1 1 auto;
    min-width: 0;
  }

  .contact-action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    padding: 0.625rem 0.75rem;
    border-radius: var(--radius-md);
    background: rgba(0, 51, 160, 0.02);
    border: 1.5px solid var(--border-subtle);
    color: var(--text-primary);
    min-height: 48px;
    box-shadow: 0 2px 8px rgba(0, 51, 160, 0.04);
    transition: all var(--duration-normal) var(--ease-out);
  }

  :global(.dark) .contact-action {
    background: rgba(51, 102, 204, 0.04);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .contact-action:hover {
    border-color: rgba(0, 51, 160, 0.35);
    background: rgba(0, 51, 160, 0.08);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 51, 160, 0.12);
  }

  .contact-action:focus-visible {
    outline: 3px solid var(--cern-blue);
    outline-offset: 2px;
  }

  /* Call button: primary styling on mobile */
  .contact-action-call {
    background: var(--cern-blue);
    color: white;
    border-color: var(--cern-blue);
    box-shadow: 0 2px 8px rgba(0, 51, 160, 0.25);
