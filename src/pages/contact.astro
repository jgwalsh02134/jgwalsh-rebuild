    border-color: rgba(52, 199, 89, 0.4);
  }

  /* Phone detail row: hidden on mobile (the call CTA is visible instead) */
  .contact-action-row-phone {
    display: none;
  }

  .contact-action-left {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    min-width: 0;
  }

  .contact-action-leading-icon {
    color: var(--text-tertiary);
    flex: 0 0 auto;
    opacity: 0.75;
  }

  .contact-action-text {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .contact-action-label {
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--text-tertiary);
    line-height: 1;
    margin-bottom: 1px;
  }

  .contact-action-value {
    font-weight: 600;
    color: var(--text-secondary);
    min-width: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: var(--text-sm);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .contact-action:hover .contact-action-value {
    color: var(--text-primary);
  }

  .contact-action-chevron {
    color: var(--text-tertiary);
    flex: 0 0 auto;
    transition: transform var(--duration-fast) var(--ease-out),
      color var(--duration-fast) var(--ease-out);
  }

  .contact-action:hover .contact-action-chevron {
    color: var(--cern-blue);
    transform: translateX(2px);
  }

  /* ═══════════════════════════════════════
