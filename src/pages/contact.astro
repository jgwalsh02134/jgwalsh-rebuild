---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout
  title="Contact – James Gregory Walsh"
  description="Contact James (J.) Gregory Walsh for professional inquiries related to psychology, behavioral analysis, data-informed research, and investigative readiness."
>
  <Header slot="header" currentPath="/contact" />

  <!-- Body content adapted from pasted HTML; Tailwind utilities replaced with page-scoped CSS -->
  <section class="contact-page" aria-labelledby="contact-title">
    <div class="contact-card">
      <div class="contact-identity">
        <div class="contact-monogram" aria-hidden="true">
          <span class="contact-monogram-text">JGW</span>
        </div>
        <h1 id="contact-title" class="contact-title">J. Gregory (Greg) Walsh</h1>
        <p class="contact-subtitle">Add to contacts with one click.</p>
      </div>

      <div class="contact-actions">
        <a href="mailto:jgwalsh@proton.me" class="contact-action">
          <span class="contact-action-text">jgwalsh@proton.me</span>
          <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
        <a href="tel:+16173833745" class="contact-action">
          <span class="contact-action-text">+1 (617) 383-3745</span>
          <svg class="contact-action-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>

      <div class="contact-links" aria-label="Professional links">
        <div class="contact-links-grid">
          <a
            href="https://www.linkedin.com/in/jgregorywalsh"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="contact-link"
          >
            <img src="https://iconsusa.org/assets/icons_copy/linkedin.svg" alt="LinkedIn" class="contact-link-icon" loading="lazy" />
            <span class="contact-link-label">LinkedIn</span>
          </a>
          <a
            href="https://www.usajobs.gov/applicant/profile/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="USAJobs"
            class="contact-link"
          >
            <img src="https://iconsusa.org/assets/icons_copy/icons8-usa.svg" alt="USAJobs" class="contact-link-icon" loading="lazy" />
            <span class="contact-link-label">USAJobs.gov</span>
          </a>
          <a
            href="https://orcid.org/0000-0002-4420-5724"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="ORCID"
            class="contact-link"
          >
            <img src="https://iconsusa.org/assets/icons_copy/orcid.svg" alt="ORCID" class="contact-link-icon" loading="lazy" />
            <span class="contact-link-label contact-link-label-orcid">ORCID</span>
          </a>
          <a
            href="https://saintsnetwork.siena.edu/profile/gregwalsh/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Siena College"
            class="contact-link"
          >
            <img src="https://iconsusa.org/assets/icons_copy/SIENa-S.svg" alt="Siena College" class="contact-link-icon" loading="lazy" />
            <span class="contact-link-label contact-link-label-siena">Siena College</span>
          </a>
          <a href="mailto:jgwalsh@bu.edu" aria-label="Boston University" class="contact-link">
            <img src="https://iconsusa.org/assets/icons_copy/bu-33.svg" alt="Boston University" class="contact-link-icon" loading="lazy" />
            <span class="contact-link-label contact-link-label-bu">Boston University</span>
          </a>
        </div>
      </div>

      <div class="contact-vcard">
        <a
          href="/assets/j_gregory_walsh.vcf"
          type="text/vcard"
          aria-label="Open J. Gregory Walsh vCard in Contacts"
          class="contact-vcard-btn"
        >
          <span class="contact-vcard-btn-text">Add to Contacts</span>
          <svg class="contact-vcard-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 0 1 8 0zM12 14a7 7 0 0 0-7 7h14a7 7 0 0 0-7-7z"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .contact-page {
    min-height: calc(100vh - var(--header-height));
    padding-top: calc(var(--header-height) + var(--space-16));
    padding-bottom: var(--space-16);
    display: grid;
    place-items: start center;
    background: var(--bg-primary);
  }

  .contact-card {
    width: 100%;
    max-width: 420px;
    background: var(--bg-card);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-12);
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .contact-identity {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .contact-monogram {
    width: 96px;
    height: 96px;
    border-radius: var(--radius-full);
    background: var(--cern-blue-tr);
    display: grid;
    place-items: center;
    border: 4px solid var(--bg-primary);
    box-shadow: var(--shadow-sm);
    margin-bottom: var(--space-2);
  }

  .contact-monogram-text {
    font-weight: 800;
    font-size: 2rem;
    letter-spacing: -0.02em;
    color: var(--cern-blue);
  }

  .contact-title {
    font-family: 'Crimson Pro', serif;
    font-weight: 700;
    font-size: 1.75rem;
    line-height: 1.15;
    color: var(--text-primary);
  }

  .contact-subtitle {
    font-size: 0.9375rem;
    color: var(--text-tertiary);
    max-width: none;
  }

  .contact-actions {
    display: grid;
    gap: var(--space-3);
  }

  .contact-action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: var(--space-4);
    border-radius: var(--radius-md);
    background: var(--bg-secondary);
    border: 1px solid var(--border-subtle);
    color: var(--text-primary);
  }

  .contact-action:hover {
    border-color: var(--border-medium);
    background: var(--cern-blue-light);
  }

  .contact-action-text {
    font-weight: 600;
    color: var(--text-secondary);
  }

  .contact-action:hover .contact-action-text {
    color: var(--text-primary);
  }

  .contact-action-icon {
    color: var(--text-tertiary);
    opacity: 0.9;
    flex: 0 0 auto;
  }

  .contact-action:hover .contact-action-icon {
    color: var(--cern-blue);
  }

  .contact-links {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .contact-links-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: var(--space-4);
  }

  .contact-link {
    text-align: center;
    padding: var(--space-3);
    border-radius: var(--radius-md);
    background: transparent;
    border: 1px solid transparent;
    color: var(--text-secondary);
  }

  .contact-link:hover {
    background: var(--bg-secondary);
    border-color: var(--border-subtle);
    color: var(--text-primary);
  }

  .contact-link-icon {
    width: 40px;
    height: 40px;
    display: block;
    margin: 0 auto;
    opacity: 0.75;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover .contact-link-icon {
    opacity: 1;
  }

  .contact-link-label {
    display: block;
    margin-top: var(--space-2);
    font-size: 0.75rem;
    color: var(--text-tertiary);
    max-width: none;
  }

  .contact-link:hover .contact-link-label {
    color: var(--cern-blue);
  }

  .contact-link-label-orcid {
    /* Keep the original page's subtle “ORCID is green” cue, but aligned to the token system */
    color: var(--text-tertiary);
  }

  .contact-link:hover .contact-link-label-orcid {
    color: #65a30d; /* lime-ish */
  }

  .contact-link:hover .contact-link-label-siena {
    color: #d97706; /* amber-ish */
  }

  .contact-link:hover .contact-link-label-bu {
    color: #dc2626; /* red-ish */
  }

  .contact-vcard {
    padding-top: var(--space-6);
    border-top: 1px solid var(--border-subtle);
  }

  .contact-vcard-btn {
    width: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-3);
    padding: 0.875rem 1.25rem;
    border-radius: var(--radius-md);
    background: #14b8a6; /* teal */
    color: white;
    font-weight: 700;
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow: var(--shadow-sm);
  }

  .contact-vcard-btn:hover {
    background: #0d9488;
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .contact-vcard-btn:active {
    transform: translateY(0) scale(0.99);
  }

  .contact-vcard-btn-text {
    flex: 1 1 auto;
    text-align: center;
    max-width: none;
  }

  .contact-vcard-btn-icon {
    opacity: 0.85;
  }

  @media (max-width: 520px) {
    .contact-card {
      padding: var(--space-8);
    }

    .contact-links-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
</style>